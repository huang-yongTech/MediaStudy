<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_hello_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/main_android_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Android"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/main_hello_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/main_assets_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Assets音频"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/main_android_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/main_pcm_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PCM音频"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_assets_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25" />


    <Button
        android:id="@+id/main_recorder_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="开始录音"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_hello_btn"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/main_play_back_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="播放录音音频"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_recorder_btn"
        app:layout_constraintTop_toBottomOf="@id/main_assets_btn"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5" />
</android.support.constraint.ConstraintLayout>